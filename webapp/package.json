{
  "name": "fabula-ultima-webapp",
  "version": "1.0.0",
  "description": "Complete Fabula Ultima digital platform with AI-generated adventures",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "test": "jest",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "keywords": ["fabula-ultima", "ttrpg", "webapp", "ai", "8bit", "final-fantasy"],
  "author": "ebris",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^29.5.0"
  }
}